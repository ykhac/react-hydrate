{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@client/*": ["./src/client"],
      "@server/*": ["./src/server"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
